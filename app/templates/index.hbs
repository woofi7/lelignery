<div id="contact">
  <div class="container py-5">
    <h1 class="mb-5 text-white">
      {{t "contact.title"}}
      <span class="float-right h4">
        <a href="#" class="fab fa-facebook-f p-2"></a>
        <a href="#" class="fab fa-twitter p-2"></a>
      </span>
    </h1>
    <div class="row">
      <div class="col-sm-4">
        <div class="row">
          <div class="col-6 col-sm-12 pb-3">
            {{t "contact.phone"}} : <a href="tel:">(123)-456-7890</a><br>
            {{t "contact.email"}} : <a href="mailto:info@lelignery.ca">info@lelignery.ca</a>
          </div>
          <div class="col-6 col-sm-12 pb-3">
            000, rue untel<br>
            Trois-Rivi√®re, Qc<br>
            000 000
          </div>
        </div>
      </div>
      <form class="col">
        <div class="form-row">
          <div class="col-sm-6">
            <div class="form-group">
              <input type="text" class="form-control" id="nameFormInput" placeholder={{t "contact.name"}}>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="emailFormInput" placeholder={{t "contact.email"}}>
            </div>
          </div>
          <div class="col">
            <div class="form-group h-100 pb-3">
              <textarea class="form-control h-100" id="messageFormInput" placeholder={{t "contact.message"}}></textarea>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col">
            <div class="form-group">
              <input type="text" class="form-control" id="phoneFormInput" placeholder={{t "contact.phone"}}>
            </div>
          </div>
          <div class="col">
            <button type="submit" class="btn btn-control mb-2 w-100 text-left">{{t "contact.send"}}</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>